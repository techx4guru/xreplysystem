
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && (request.auth.token.admin == true || request.auth.token.role == 'superadmin');
    }
  
    // Users can only read/write to their own folder. Admins can also access.
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && (request.auth.uid == uid || isAdmin());
    }

    // Allow public read for avatars for simplicity, but only owner/admin can write.
    // In a real app, you might use getDownloadURL for authenticated reads.
    match /users/{uid}/avatar.jpg {
        allow read;
        allow write: if request.auth != null && (request.auth.uid == uid || isAdmin());
    }
    
    // Admins can read any path for debugging/management purposes.
     match /{allPaths=**} {
      allow read: if isAdmin();
    }
  }
}
