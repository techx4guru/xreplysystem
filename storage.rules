
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for simplicity in this example.
    // For production, you'd likely want more restrictive rules.
    match /{allPaths=**} {
      allow read;
    }
    
    // Users can only write to their own folder.
    match /users/{uid}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
